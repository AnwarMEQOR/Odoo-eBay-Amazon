<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_general_configuration_with_endpoint_token" model="ir.ui.view">
            <field name="name">General Settings with Endpoint Token</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="model">base.config.settings</field>
            <field name="arch" type="xml">
                <group name="google_analytics" position="after">
                    <group string="Slack Integration" name="slack_client_id">
                        <label for="slack_client_id"/>
                        <div>
                            <field name="slack_client_id" class="oe_inline"/>
                        </div>
                        <label for="slack_client_secret"/>
                        <div>
                            <field name="slack_client_secret" class="oe_inline"/>
                        </div>
                        <label for="slack_oauth_access_token"/>
                        <div>
                            <field name="slack_oauth_access_token" class="oe_inline"/>
                        </div>
                        <label for="slack_verification_token"/>
                        <div>
                            <field name="slack_verification_token" class="oe_inline"/>
                        </div>
                        <label for="slack_team_id"/>
                        <div>
                            <field name="slack_team_id" class="oe_inline"/>
                        </div>
                        <label for="slack_bot_token"/>
                        <div>
                            <field name="slack_bot_token" class="oe_inline"/>
                        </div>
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>

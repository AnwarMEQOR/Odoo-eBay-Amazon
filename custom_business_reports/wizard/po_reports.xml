<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="view_po_international_diff_wizard" model="ir.ui.view">
        <field name="name">view.po.international.diff.wizard.form</field>
        <field name="model">po.international.diff.wizard</field>
        <field name="arch" type="xml">
            <form string="International POs Discrepancy">
                <footer>
                    <button name="button_download_report" type="object" string="Download Report" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_po_international_diff_wizard" model="ir.actions.act_window">
        <field name="name">International POs Discrepancy</field>
        <field name="res_model">po.international.diff.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</data>
</odoo>


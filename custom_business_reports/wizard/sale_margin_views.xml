<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_margin_wizard" model="ir.ui.view">
            <field name="name">view.sale.margin.wizard.form</field>
            <field name="model">sale.margin.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Margins">
                    <group>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <field name="store"/>
                            <field name="report_timezone"/>
                        </group>
                    </group>
                    <footer>
                      <button name="button_download_report" type="object" string="Download Report" class="oe_highlight"/>
                      or
                      <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
